@model IEnumerable<GiftRegistry.Models.ApplicationUser>
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.Owin;
@using System.Collections.Generic;
@{
    ViewBag.Title = "AddFriend";
}

<h2>Add Friends</h2>

<table class="table">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Birthday</th>
        <th>Age</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        if (item.Id != User.Identity.GetUserId())
        {
            int age = DateTime.Now.Year - item.BirthDate.Year;
            if (DateTime.Now.Month < item.BirthDate.Month)
            {
                age--;
            }
            string birthday = item.BirthDate.ToString("MMMM dd, yyyy");

            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @birthday
                </td>
                <td>
                    @age
                </td>
                <td>
                    @Html.ActionLink("Add", "SendFriendRequest", new { id = item.Id })
                </td>
            </tr>
        }
    }
</table>